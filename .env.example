# Knowledge Gains Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Application Configuration
APP_ENV=development
SECRET_KEY=your-secret-key-for-sessions-and-auth
DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,md,doc,docx

# AI Agent Configuration
DEFAULT_MODEL=gpt-4
TEMPERATURE=0.7
MAX_TOKENS=4000

# Web Search Configuration
ENABLE_WEB_SEARCH=True
SEARCH_TIMEOUT=30

# Database Configuration (optional overrides)
# DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_gains